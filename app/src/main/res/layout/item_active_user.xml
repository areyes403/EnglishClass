<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imgPhotoProfileItem"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/avatar"
                android:layout_alignParentStart="true"/>

            <TextView
                    android:id="@+id/nameUserActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/imgPhotoProfileItem"/>

            <TextView
                    android:id="@+id/carreraUserActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/nameUserActive"
                    android:layout_toEndOf="@+id/imgPhotoProfileItem"/>

            <TextView
                    android:id="@+id/englishLevelUserActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/carreraUserActive"
                    android:layout_toEndOf="@id/imgPhotoProfileItem"/>

            <ImageView
                    android:id="@+id/callUserActive"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_phone_24" />
        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>